<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header.container">
            <container name="div.header" htmlTag="div" htmlClass="div-header" before="-">
                <block class="Magento\Framework\View\Element\Template" name="div-header-content"
                       template="Magento_Theme::div_header.phtml"/>
            </container>
        </referenceContainer>

        <referenceContainer name="page.wrapper">
            <container name="page.bottom" htmlTag="div" htmlClass="page-bottom"
                       before="footer.container">
                <block class="Magento\Newsletter\Block\Subscribe" name="form.subscribe" as="subscribe" before="-"
                       template="Magento_Newsletter::subscribe.phtml"/>
            </container>
        </referenceContainer>

    </body>
</page>
